generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  @@map("Products")
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  discount    Int?      // в процентах
  image       String    // URL в Cloudinary
  category    String    // тип: smartphone, laptop и т.д.
  createdAt   DateTime  @default(now())
}
